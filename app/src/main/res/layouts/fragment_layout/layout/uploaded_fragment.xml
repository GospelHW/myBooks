<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">

    <com.dxc.mycollector.pullableview.PullToRefreshLayout
        android:id="@+id/upload_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />

        <com.dxc.mycollector.pullableview.PullableListView
            android:id="@+id/upload_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/gray"
            android:dividerHeight="1dp" />

        <include layout="@layout/load_more" />

    </com.dxc.mycollector.pullableview.PullToRefreshLayout>

    <TextView
        android:id="@+id/upload_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="没有已上传的量测任务" />
</RelativeLayout>